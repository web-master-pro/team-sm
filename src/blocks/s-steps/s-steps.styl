.s-steps
    background-color white
    &__inner
        container(1200px)
        padding 105px 20px 75px

    &__title
        color #002d1a
        font(Bold)
        fs(26px,50px)
        line-height 1.2
        text-align center
        max-width 850px
        margin 0 auto 95px
        +below(1000px)
            margin-bottom 50px
        +below(570px)
            margin-bottom 30px

    &__list
        display flex
        flex-flow row wrap
        align-aitems center
        list-style none
        font-size 0
        padding 0
        margin 0 -24px

    &__item
        display block
        flex 1 1 33.3333%
        padding 0 5px
        margin-bottom 75px
        position relative
        +below(1000px)
            flex 1 1 50%
            margin-bottom 50px
        +below(570px)
            flex 1 1 100%
            margin-bottom 20px
        &:nth-child(1)
        &:nth-child(2)
            &::after
                content ""
                display block
                position absolute
                right 0
                top 0
                bottom 0
                width 1px
                background-color #009457
                background-image linear-gradient(to top, #009457 0%, #a9efd2 100%)

        &:nth-child(4)
        &:nth-child(5)
            &::after
                content ""
                display block
                position absolute
                right 0
                top 0
                bottom 0
                width 1px
                background-color #009457
                background-image linear-gradient(to top, #a9efd2 0%, #009457 100%)

        +below(1000px)
            &:nth-child(1)
            &:nth-child(3)
            &:nth-child(5)
                &::after
                    content ""
                    display block
                    position absolute
                    right 0
                    top 0
                    bottom 0
                    width 1px
                    background-color #009457
                    background-image linear-gradient(to top, #a9efd2 0%, #009457 50%, #a9efd2 100%)
            &:nth-child(2)
            &:nth-child(4)
            &:nth-child(6)
                &::after
                    display none

        +below(570px)
            &:nth-child(1)
            &:nth-child(2)
            &:nth-child(3)
            &:nth-child(4)
            &:nth-child(5)
            &:nth-child(6)
                &::after
                    display none

    &__text
        display block
        width 100%
        color #002d1a
        font(Bold)
        fs(20px,30px)
        line-height 1
        text-align center
        max-width 700px
        margin 20px auto 50px

    &__button
        margin 0 auto

    &__pop-container
        position relative
    &__pop-info
        position absolute
        top -135px
        left 20px
        +below(1000px)
            top -70px
        +below(767px)
            left 0

.step
    display block
    width 100%
    max-width 300px
    height 244px
    margin 0 auto
    position relative
    &::before
        display block
        width 60px
        height 70px
        content ""
        position absolute
        top 15px
        left 0
    &--1::before
        background url(img/s-steps-number-1.png) no-repeat 0 0
    &--2::before
        background url(img/s-steps-number-2.png) no-repeat 0 0
    &--3::before
        background url(img/s-steps-number-3.png) no-repeat 0 0
    &--4::before
        background url(img/s-steps-number-4.png) no-repeat 0 0
    &--5::before
        background url(img/s-steps-number-5.png) no-repeat 0 0
    &--6::before
        background url(img/s-steps-number-6.png) no-repeat 0 0

    +below(1300px)
        max-width 250px
        height 190px
        &::before
            transform-origin left top
            transform scale(.7)

    &__caption
        display block
        width 100%
        color #002d1a
        font(Extra)
        font-size 25px
        line-height 1.2
        text-transform uppercase
        padding-left 72px
        padding-top 20px
        margin 0
        +below(1300px)
            font-size 20px
            padding-left 55px
            padding-top 15px

    &__picture
        width 300px
        position absolute
        top 130px
        left 50%
        margin-left -150px
        background-color #13b774
        padding 0
        margin 0
        +below(1300px)
            top 90px
            width 250px
            margin-left -125px

    &__img
        display block
        width 100%
        height auto
        opacity .5
        transition opacity .5s ease
        margin 0
        ^[0]:hover &
            opacity 1




