.s-advs
    background-color #fff

    &__inner
        container(1180px)
        padding 95px 20px 80px
        +below(479px)
            padding 50px 20px

    &__title
        color #002d1a
        font(Bold)
        fs(24px,40px)
        line-height 1.2
        text-align center
        margin 0 0 1.75em
        span
            color #009457

    &__list
        list-style none
        font-size 0
        padding 0
        margin 0
        display flex
        flex-flow row wrap
        justify-content space-around

    &__item
        display block
        flex 0 0 33.33333%
        padding 150px 20px 0 0
        margin 0 0 70px
        &:nth-child(1)
            background url(img/s-advs-icon-1.png) no-repeat 117px 27px
        &:nth-child(2)
            background url(img/s-advs-icon-2.png) no-repeat 87px 10px
        &:nth-child(3)
            background url(img/s-advs-icon-3.png) no-repeat 78px 4px
        &:nth-child(4)
            background url(img/s-advs-icon-4.png) no-repeat 98px 23px
        &:nth-child(5)
            background url(img/s-advs-icon-5.png) no-repeat 99px 0
        &:nth-child(6)
            background url(img/s-advs-icon-6.png) no-repeat 87px 0

        +below(991px)
            flex 0 0 350px
        +below(767px)
            flex 0 0 300px
        +below(670px)
            flex 0 1 350px
            margin-bottom 30px
            padding-right 0

    &__caption
        color #002d1a
        font(Bold)
        font-size 24px
        line-height 1.2
        padding-left 45px
        margin 0 0 .8em
        position relative
        &::before
            content "0"
            display block
            width 27px
            background-color #01b169
            background-image linear-gradient(to top, #01b169 0%, #33c186 100%)
            color white
            font(Bold)
            font-size 24px
            line-height 1.5
            padding-top .5em
            text-align center
            position absolute
            top 0
            bottom 0
            left 0
            ^[0]__item:nth-child(1) &
                content "1"
            ^[0]__item:nth-child(2) &
                content "2"
            ^[0]__item:nth-child(3) &
                content "3"
            ^[0]__item:nth-child(4) &
                content "4"
            ^[0]__item:nth-child(5) &
                content "5"
            ^[0]__item:nth-child(6) &
                content "6"

        +below(1100px)
            font-size 20px
            &::before
                font-size 20px

    &__text
        color #00060c
        font()
        font-size 20px
        line-height 1.5
        padding-left 45px
        margin 0
        +below(1100px)
            font-size 18px
        +below(670px)
            font-size 16px
            line-height 1.3




