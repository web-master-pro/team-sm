.s-about
    background #fff url(img/s-about-bg.jpg) no-repeat center center
    background-size cover
    &__inner
        container(1440px)
        padding 120px 20px 20px
        +below(1000px)
            padding 60px 20px 20px

    &__title
        color #32c186
        font(Extra)
        fs(30px,50px)
        line-height 1
        text-transform uppercase
        text-align center
        margin 0 0 1.7em
        span
            color #002d1a
            font(Bold)
            text-transform lowercase

    &__list
        list-style none
        font-size 0
        text-align center
        padding 0
        margin 0

    &__item
        display inline-block
        vertical-align top
        width 320px
        padding 0
        margin 0 40px 50px
        +below(1280px)
            margin-left 10px
            margin-right 10px
            width 260px

    &__caption
        display block
        width 148px
        height 148px
        position relative
        margin 0 auto 30px
        &::before
            content ""
            display block
            width 148px
            height 148px
            border 3px solid #31c084
            position absolute
            top -10px
            left 10px

    &__caption-in
        display block
        width 148px
        height 148px
        background-color #009457
        background-image linear-gradient(to top, #01b169 0%, #33c186 100%)
        color white
        font(Extra)
        font-size 28px
        line-height 1
        text-align center
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        span
            color white
            font(Extra)
            line-height 1
        ^[0]__item:nth-child(1) &
            padding-top 25px
            span
                font-size 100px
                line-height 75px
        ^[0]__item:nth-child(2) &
            padding-top 20px
            span
                font-size 90px
                line-height 80px
        ^[0]__item:nth-child(3) &
            padding-top 20px
            span
                font-size 70px
                line-height 90px

    &__subcaption
        color #009457
        font(Extra)
        fs(24px,34px)
        line-height 1
        text-transform uppercase
        text-align center
        margin 0 0 1em

    &__text
        color #002d1a
        font(Semi)
        fs(16px,20px)
        line-height 1.35
        text-align left
        padding-left 30px
        margin 0
        ^[0]__item:nth-child(3) &
            padding-left 60px
        +below(1000px)
            padding-left 0
            ^[0]__item:nth-child(3) &
                padding-left 30px


