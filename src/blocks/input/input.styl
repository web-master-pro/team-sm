.input
    display block
    width 100%
    max-width 340px
    position relative


    &__input
        display block
        width 100%
        height 70px
        max-width 330px
        background-color white
        background-clip padding-box
        border-radius 35px
        border 5px solid rgba(0, 148, 87, 0.3)
        color #009457
        font(Semi)
        font-size 24px
        line-height 60px
        padding 0 35px
        margin 0
        &:focus
            border-color rgba(0, 148, 87, 0.6)
        +below(767px)
            height 60px
            line-height 52px
            border-width 4px
            font-size 20px
            padding 0 26px
        +below(479px)
            height 50px
            line-height 42px
            font-size 16px
            padding 0 16px

    &__placeholder
        color #c9e3d8
        font(Semi)
        font-size 24px
        line-height 1
        position absolute
        top 50%
        left 40px
        transform translateY(-50%)
        span
            color #009457
        +below(767px)
            font-size 20px
            left 30px
        +below(479px)
            font-size 16px
            left 20px

