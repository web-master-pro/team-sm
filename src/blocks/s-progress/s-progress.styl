.s-progress
    background #f4f4f4 url(img/s-progress-bg.jpg) no-repeat center top
    background-size cover

    &__inner
        container(1160px)
        padding 95px 10px 25px
        +below(479px)
            padding-top 50px

    &__title
        display block
        max-width 820px
        color #002d1a
        font(Bold)
        fs(24px,40px)
        line-height 1.2
        text-align center
        margin 0 auto 2em
        +below(479px)
            margin-bottom 1.5em

    &__img
        display block
        width 100%
        height auto
        margin 0 auto
        &--1
            max-width 1061px
        &--2
            max-width 1042px

    &__text
        display block
        max-width 760px
        color #002d1a
        font(Bold)
        fs(18px,30px)
        line-height 1.5
        text-align center
        margin 2.8em auto
        +below(479px)
            margin 2em auto
            line-height 1.2
